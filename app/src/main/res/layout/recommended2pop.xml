<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title: Homunculus"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author: Yamamoto, Hideo"
        android:textSize="20sp"
        android:layout_below="@id/Title"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/publishingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mar 17, 2003 to Feb 21, 2011"
        android:textSize="20sp"
        android:layout_below="@id/author"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descriptionHomunulus"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/ratingBar"
        />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/publishingDate"
        android:numStars="5"
        />

</RelativeLayout>