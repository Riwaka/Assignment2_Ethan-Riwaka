<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title: Tokyo Ghoul"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author: Ishida, Sui"
        android:textSize="20sp"
        android:layout_below="@id/Title"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/publishingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Published: Sep 8, 2011 to Sep 18, 2014"
        android:textSize="20sp"
        android:layout_below="@id/author"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/ratingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating: 8.52"
        android:textSize="20sp"
        android:layout_below="@id/publishingDate"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descriptionTokyo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/ratingText"
        />

</RelativeLayout>